task :install do
  system("mv ~/.bashrc ~/.bashrc.old")
  system("ln -s ~/.home/bashrc ~/.bashrc")
  system("mv ~/.irbrc ~/.irbrc.old")
  system("ln -s ~/.home/irbrc ~/.irbrc")
  system("mv ~/.bash_login ~/.bash_login.old")
  system("ln -s ~/.home/bash_login ~/.bash_login")
  system("mv ~/.vimrc ~/.vimrc.old")
  system("ln -s ~/.home/vimrc ~/.vimrc")
end
