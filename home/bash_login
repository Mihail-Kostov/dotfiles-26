#!/bin/sh
# -*- sh -*- vim:set ft=sh ai et sw=4 sts=4:

. .profile
## Completion Scripts
# Mac ports
if [ -f /opt/local/etc/bash_completion ]; then
. /opt/local/etc/bash_completion
fi

#if which git-completion.bash >/dev/null; then
#. git-completion.bash
#fi

# Ubuntu
if [ -f /etc/bash_completion ]; then
. /etc/bash_completion
fi

# Installed from src
if [ -f /usr/local/git/contrib/completion/git-completion.bash ]; then
    . /usr/local/git/contrib/completion/git-completion.bas
fi

scm_ps1() {
    local s=
    if [[ -d ".svn" ]] ; then
        s=\(svn\)
    else
        if [[ $(declare -f __git_ps1) ]]; then # Only show if completionompleation is there
            s=$(__git_ps1 "(git:%s)")
        fi
    fi
    echo -n "$s"
}

export PS1="\[\033[00;32m\]\u\[\033[00;32m\]@\[\033[00;32m\]\h:\[\033[01;34m\]\w \[\033[31m\]\$(scm_ps1)\[\033[00m\]$\[\033[00m\] "

