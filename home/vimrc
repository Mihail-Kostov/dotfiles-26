function RspecSpace()
  :wall
  :RspecLast
endfunction

nnoremap <leader>. :RspecLast<CR>
nnoremap <Space> :wall\|RspecLast<CR>

function! RamapSpace(cmd)
  execute 'nnoremap <Space> :wall\|'. cmd . '<CR>'
endfunction
command! -nargs=+ RemapSpace call RamapSpace(<q-args>)


" Increment a column of number. Select a column of numbers (numbers should be
" the same), then C-a to have them incremented from the first number.
function! Incr()
    let a = line('.') - line("'<")
    let c = virtcol("'<")
    if a > 0
        execute 'normal! '.c.'|'.a."\<C-a>"
    endif
    normal `<
endfu

vnoremap <C-a> :call Incr()<CR>

"Kill Trailer Trash
autocmd BufWritePre * :TrailerTrim

function MapSpace(command)
  exec ":nnoremap <Space> :wall\\|!ruby %<CR>"
endfunction

function Dequote()
  " Requires `gdefault` to be set.
  exec ":%s/[“”]/\"/"
  exec ":%s/[‘’]/'/"
endfunction
command! -nargs=0 Dequote :call Dequote()


