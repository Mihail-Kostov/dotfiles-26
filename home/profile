#!/bin/sh
# -*- sh -*- vim:set ft=sh ai et sw=4 sts=4:

export LSCOLORS="exgxbxdxbxegedxbxgacba"
export CLICOLOR=1
export EDITOR="vim"
alias ls="ls -GF"
alias ri="ri -Tf ansi"
alias :q="exit"
alias :wq="exit"
alias duf='du -sk * | sort -n | perl -ne '\''($s,$f)=split(m{\t});for (qw(K M G)) {if($s<1024) {printf("%.1f",$s);print "$_\t$f"; last};$s=$s/1024}'\'
export P4CONFIG=".p4config"

PLATFORM=`uname -s`
case "$PLATFORM" in
"Darwin")
  export PATH=/usr/local/bin:$HOME/bin:$PATH
  export MANPATH=/usr/local/share/man:$MANPATH
  if [ -f "/Applications/MacVim.app/Contents/MacOS/Vim" ]
  then
      if [[ "screen-256color" == $TERM ]]
      then
          alias vim="reattach-to-user-namespace -l /Applications/MacVim.app/Contents/MacOS/Vim"
      else
          alias vim="/Applications/MacVim.app/Contents/MacOS/Vim"
      fi
    export EDITOR="/Applications/MacVim.app/Contents/MacOS/Vim"
  fi
  alias gvim="mvim"
  alias emacs="/Applications/Emacs.app/Contents/MacOS/Emacs"
  alias fpm="/Developer/Applications/Utilities/PackageMaker.app/Contents/Resources/Flat\ Package\ Editor.app/Contents/MacOS/Flat\ Package\ Editor"
  alias mysql.server="sudo /usr/local/mysql/support-files/mysql.server"
  # alias xcode="open -a /Developer/Applications/Xcode.app *.xcodeproj"
  echo -e "\e[00;31mDotfiles Engage!\e[00m"
;;
"Linux")
  echo "Dotfiles Engage!"
  alias mvim="gvim"
  alias ls="ls --color -F"
;;
esac

if [ -f $HOME/.local_profile ]
then
  source $HOME/.local_profile
fi

[[ -s "/Users/csexton/.rvm/scripts/rvm" ]] && source "/Users/csexton/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
#curl -s randomfunfacts.com | grep '<i>' | sed -e 's/<[^>]*>//g;s/^ *//g;s/ *$//g;s/&nbsp;//'
