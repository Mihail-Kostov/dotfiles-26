setenv                    LC_CTYPE en_US.UTF-8
# screenrc
escape                    ^\\
shell                     zsh
defutf8                   on
autodetach                on
crlf                      off
hardcopy_append           on
startup_message           off
vbell                     off
defscrollback             10000
silencewait               15
#hardstatus                off
activity                  "%c activity -> %n%f %t"
bell                      "%c bell -> %n%f %t^G"
hardstatus alwayslastline "%{=b Kk}screen: %{= Kw}%-w%{=b kg}%n %t%{-}%+w %-="
